<div class="container">
  <h1>Covid19 Status</h1>
  <div >
    <form method="post" action="/covid19/html">
      <table class="table table-bordered">
        <tbody>
          <tr><td>State: </td>
              <td> <input type="text" name="state" placeholder="e.g. MA"></td>
          </tr>
          <tr>
            <td> Data type</td>
            <td>
              <select name="dataType">
                <option value="Positive">Positive</option>
                <option value="Recovered">Recovered</option>
                <option value="Death">Death</option>
                <option value="Total">Total Test Result</option>
              </select>
            </td>
          </tr>
          </tbody>
      </table>
      <input type="submit">
    </form>
  </div>

  <div class="col-sm-6">
  <ol>
      <li>
        <% data.forEach((item) => {%>
          <h3 class="title">
            State: <%= item.state || 'anyone'%>
            <br>Data Type: <%= dataType %>
          </h3>
          <%= item.state %>
          <% if (dataType == "Positive") {%>
          <%= item.positive %>
          <% } else if (dataType == "Recovered") {%>
          <%= item.recovered %>
          <% } else if (dataType == "Death") {%>
          <%= item.death %>
          <% } if (dataType == "Total Test Result") {%>
          <%= item.totalTestResults %>
          <% } %>
      </li>
    <%});%>
    </ol>
</div>

  <div class= "col-sm-6">
    <h1> Positive list of all states</h1>
        <% list.forEach((item) => {%>
          <hr>
          <%= item.state %> <%= item.positive %>
        <%});%>
  </div>
</div>
